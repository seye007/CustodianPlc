
<style>
      .cookie-consent-form .card {
        margin-top: 20px;
        margin-left: 5rem;
        margin-right: 5rem;
    }
    .cookie-consent-form {
        position: fixed;
        top: 10px;
        width: 100%;
        height: 100%;
        background-color: rgba(255,255,255,0.8);
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
    }

  </style>

@{
  var value = ViewBag.IsCookieConsent;
  var t = value;
  if(!ViewBag.IsCookieConsent)
    {
  <div class="cookie-consent-form">
            <form asp-action="AcceptCookies" asp-controller="Home" >
                <input type="hidden" name="redirectUrl" value="@ViewBag.Url">
                <div class="card shadow" style="background-color: #F5D7A2; padding:25px">
                    <div class="card-body">
                        <h1 class="card-title font-title mx-auto">Privacy Consent</h1>
                        <p class="card-text text-left text-dark font-text" style="font-size: 1.1rem; line-height: 1.6; letter-spacing: 0.02em;">
                            By clicking on accecpt, you consent to our collection, use, sharing, and protection of your personal data
                            as described in our Privacy Policy. We may share your personal data with insurers, claims handlers, and legal and
                            regulatory authorities. You have the right to request access to, correction of, or erasure of your personal data. If
                            you have any questions or concerns, please contact us at carecentre@custodianinsurance.com.
                        </p>
                        <hr>
                        <h5 class="card-subtitle font-weight-bold text-secondary">What information we collect</h5>
                        <p class="card-text text-left text-dark font-text" style="font-size: 1.1rem; line-height: 1.6; letter-spacing: 0.02em;">
                            We collect personal information such as your name, contact details, and insurance history. We also collect information
                            about your device and how you use our application.
                        </p>
                        <hr>
                        <h5 class="card-subtitle font-weight-bold text-secondary">How we use your information</h5>
                        <p class="card-text text-left text-dark font-text" style="font-size: 1.1rem; line-height: 1.6; letter-spacing: 0.02em;">
                            We use your personal information to provide you with insurance quotes and to administer your insurance policy.
                            We may also use your information for research and development purposes to improve our products and services.
                        </p>
                        <button class="btn btn-brand float-right" asp-action="Index" asp-controller="Home">Decline</button>
                        <button class="btn btn-brand float-right" asp-action="AcceptCookies" asp-controller="Home" style="margin-left:25px">Accept</button>
                    </div>
                </div>
            </form>
  </div>
 
        }
    }
