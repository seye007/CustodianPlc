
<script>
  function personalInformationValidation() {
    @*
  --------------------------------------------------------
  |       Personal Information validation                |
  --------------------------------------------------------
  *@

    var is_valid_file = validateRequiredField($("#idUploaderFile"),$(".idUploaderFile_val"));
    var is_valid_identification_no = validateRequiredField($("#identification_no"),$(".identification_no_val"));
    var is_valid_identification_type = validateRequiredField($("#identification_type"),$(".identification_type_val"));
    var is_valid_occupation = validateRequiredField($("#occupation"),$(".occupation_val"));
    var is_valid_state = validateRequiredField($("#state"),$(".state_val"));
    var is_valid_address = validateRequiredField($("#address"),$(".address_val"));
    var is_valid_telephone = validateRequiredField($("#telephone"),$(".telephone_val"));
    var is_valid_email = validateRequiredField($("#email"),$(".email_val"));
    var is_valid_gender = validateRequiredField($("#gender"),$(".gender_val"));
    var is_valid_date_of_birth = validateRequiredField($("#date_of_birth"),$(".date_of_birth_val"));
    var is_valid_firstname =  validateRequiredField($("#firstname"),$(".firstname_val"));
    var is_valid_surname =  validateRequiredField($("#surname"),$(".surname_val"));
    var is_valid_title = validateRequiredField($("#title"), $(".title_val"));

  if(is_valid_title && is_valid_telephone && is_valid_surname && is_valid_occupation
    && is_valid_identification_type && is_valid_identification_no && is_valid_firstname
    && is_valid_file && is_valid_email && is_valid_date_of_birth &&is_valid_address && is_valid_state)
  {
      $('#step-1').hide();
      $('#step-2').show();
      $('.stepwizard-1').removeClass('btn-primary').addClass('btn-default');
      $('.stepwizard-2').removeClass('btn-default').addClass('btn-primary');
  }
}
</script>
