	<style>

					#modal {
						display: none;
						overflow: hidden;
					}

					#modal-overlay {
						display: block;
						position: fixed;
						width: 100%;
						height: 100%;
						background: black;
						opacity: 0.5;
						top: 0;
						left: 0;
						z-index: 999998;
					}

					#modal-container {
						display: block;
						position: fixed;
						width: 100%;
						height: 100%;
						top: 0;
						left: 0;
						z-index: 999998;
						overflow: hidden;
					}

					.modal-main {
					}

					#loader-modal {
						display: block;
						text-align: center;
						margin: 10% auto 0;
					}

						#loader-modal div {
							display: inline-block;
							border-radius: 3px;
							background: white;
							overflow: hidden;
							padding: 70px;
						}

						#loader-modal img {
							display: block;
							width: 150px;
							margin: 0 auto;
						}
				</style>

				<div id="modal">
					<div id="modal-overlay"></div>
					<div id="modal-container">
						<div class="modal-main" id="loader-modal">
							<div>
								<img src="https://custodianplc.com.ng/img/loader.gif">
							</div>
						</div>
					</div>
				</div>
				<section class="section-primary" style="background-color:#ffffff;">

					<div class="container-fluid padform" style="padding-top:15px; padding-left:100px;">

						<div class="stepwizard col-md-7 formtop-width">
							<div class="stepwizard-row setup-panel">
								<div class="stepwizard-step">
									<a class="btn btn-primary btn-circle disable btn-active" href="#step-1" type="button">1</a>
									<p>Personal</p>
								</div>
								<div class="stepwizard-step">
									<a disabled="disabled" class="btn btn-default btn-circle disable btn-active" href="#step-2" type="button">2</a>
									<p>Car details</p>
								</div>
								<div class="stepwizard-step">
									<a disabled="disabled" class="btn btn-default btn-circle disable btn-active" href="#step-3" type="button">3</a>
									<p>Summary</p>
								</div>
							</div>
						</div>

					</div>
					<div class="container-fluid padform" style="padding-left:100px;">
						<div class="row">

							<div class="col-md-7 form-sha" style="">
